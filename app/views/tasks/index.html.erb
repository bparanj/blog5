<h1>Tasks</h1>

<table>
  <thead>
    <tr>
      <th></th>
    </tr>
  </thead>

  <tbody>
	<% @task_months.each do |month, tasks| %>
	  <%= month.strftime('%B') %>
	<tr>
	  <% for task in tasks %>
		<div class='task'>
			<strong> task.name </strong>
			due on <%= task.due_date.to_date.to_s(:long) %>
		</div>
	  <% end %>
	 </tr>		 
	<% end %>	  
  </tbody>
</table>

<br>