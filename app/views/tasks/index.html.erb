<h1>Tasks</h1>

<table>
  <thead>
    <tr>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.in_groups_of(4, false) do |row| %>
	  <tr>
		<% for task in row %>
	        <td><%= task.name %></td>
		<% end %>  
	  </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_task_path %>
